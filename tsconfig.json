{
  "compilerOptions": {
    "outDir": "dist/server",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "mocha"],
    "typeRoots": [
      "server/",
      "./node_modules/@types"
    ]
  },
  "include": [
    "server/**/*.ts"
  ]
}
