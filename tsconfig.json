{
  "compilerOptions": {
    "outDir": "dist/server",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["types", "node_modules/@types"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx"
  ],
  "files": [
    "server/types.d.ts"
  ]
}
